<!DOCTYPE module PUBLIC
    "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
    "http://www.puppycrawl.com/dtds/configuration_1_3.dtd">

<!-- Original rules borrowed from: https://code.google.com/p/google-api-java-client/source/browse/checkstyle.xml -->
<module name="Checker">
   <module name="TreeWalker">
      <! Make sure methods start with a capital letter -->
      <module name="MethodName">
         <property name="format" value="^[A-Z].*" />
      </module>

      <! -- Make sure constant names are in all caps -->
      <module name="ConstantName">
         <property name="format" value="^[A-Z]*" />
      </module>

      <! -- Non-static fields start with a lowercase letter -->
      <module name="MemberName">
         <property name="format" value="^[a-z].*" />
      </module>
   </module>
</module>
